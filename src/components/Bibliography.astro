---
import { getCollection } from "astro:content";
import BibliographyItem from "./BibliographyItem.astro";
import reverseChronologicalSort from "@util/reverse-chronological-sort";

const entries = (await getCollection("papers")).sort((a, b) =>
    reverseChronologicalSort(a.data.date, b.data.date),
);
---

<ol>
    {entries.map((entry) => <BibliographyItem id={entry.id} />)}
</ol>

<style>
    ol {
        padding-left: 0;
        list-style: none;
    }
</style>
