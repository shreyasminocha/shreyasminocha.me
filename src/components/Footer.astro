---
import FooterIcon from "./FooterIcon.astro";

import GoogleScholar from "@media/icons/google-scholar.svg?raw";
import Dblp from "@media/icons/dblp.svg?raw";
import Orcid from "@media/icons/orcid.svg?raw";
import GitHub from "@media/icons/github.svg?raw";

const today = new Date();

const ICONS = [
    {
        link: "https://dblp.org/pid/408/9845.html",
        linkTitle: "Shreyas Minocha on DBLP",
        iconSvg: Dblp,
    },
    {
        link: "https://orcid.org/0009-0004-4730-9221",
        linkTitle: "Shreyas Minocha on ORCID",
        iconSvg: Orcid,
    },
    {
        link: "https://scholar.google.com/citations?view_op=list_works&user=45aREa4AAAAJ",
        linkTitle: "Shreyas Minocha on Google Scholar",
        iconSvg: GoogleScholar,
    },    
    {
        link: "https://github.com/shreyasminocha",
        linkTitle: "@shreyasminocha on GitHub",
        iconSvg: GitHub,
    },
];
---

<footer role="contentinfo">
    <ul>
        {
            ICONS.map(({ link, linkTitle, iconSvg }) => (
                <li>
                    <FooterIcon {link} {linkTitle} {iconSvg} />
                </li>
            ))
        }
    </ul>

    <p>
        &copy; 2017â€“{today.getFullYear()}
        <a href="/">Shreyas Minocha</a>.
        <a href="/blog/feed.xml" target="_blank" title="This blog's feed"
            >Feed</a
        >.
    </p>

    <p>
        Content under <a
            href="https://raw.githubusercontent.com/shreyasminocha/shreyasminocha.me/main/src/content/LICENSE"
            >CC BY-SA 4.0</a
        >. <a href="https://github.com/shreyasminocha/shreyasminocha.me"
            >Source code</a
        > under the <a
            href="https://raw.githubusercontent.com/shreyasminocha/shreyasminocha.me/main/LICENSE"
            >MIT License</a
        >.
    </p>
</footer>

<style>
    footer {
        text-align: center;
        margin: 5em 0 2.5em;
        font-size: smaller;
    }

    ul {
        list-style: none;
        padding-left: 0;
    }

    li {
        display: inline;
        margin-right: 1em;
    }

    li:last-child {
        margin-right: 0;
    }

    li :global(a) {
        text-decoration: none;
        content: "";
        background-size: cover;
    }

    li :global(a svg) {
        width: 27px;
        color: var(--body-color);
    }
</style>
