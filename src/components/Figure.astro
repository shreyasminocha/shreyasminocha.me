---
import renderInlineMarkdown from "@util/render-inline-md.ts";
import type { JsxElement } from "typescript";

interface Props {
    src?: string;
    alt?: string; // todo: make this mandatory
    caption?: string | JsxElement;
    // todo: make the attribution stuff a child?
    attribution?: string;
    attributionLink?: string;
    width?: number;
    height?: number;
}

const { src, alt, caption, attribution, attributionLink, width, height } =
    Astro.props;

const captionText =
    typeof caption === "string" ? await renderInlineMarkdown(caption) : null;
---

<figure>
    {
        src ? (
            <img
                {src}
                alt={
                    alt ||
                    (typeof caption === "string" ? caption : null) ||
                    "Missing alt text, sorry"
                }
                width={width?.toString()}
                height={height?.toString()}
            />
        ) : (
            <slot />
        )
    }

    {
        (caption || attribution) && (
            <>
                {caption &&
                    (typeof caption === "string" ? (
                        captionText
                    ) : (
                        <>{caption}</>
                    ))}

                {attribution && (
                    <p>
                        <small class="attribution">
                            Source:
                            {attributionLink ? (
                                <a
                                    href={attributionLink}
                                    rel="nofollow noreferrer"
                                >
                                    {attribution}
                                </a>
                            ) : (
                                attribution
                            )}
                        </small>
                    </p>
                )}
            </>
        )
    }
</figure>

<style>
    figure {
        max-width: 100%;
        margin: 1em 0;
    }

    figcaption {
        margin-top: 0.5em;
    }

    figcaption p {
        text-align: center;
        font-style: italic;
        margin-bottom: 0;
    }

    .attribution {
        font-style: normal;
    }

    img {
        display: block;
        margin: 0 auto;
    }
</style>
