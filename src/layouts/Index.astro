---
import Head from "../components/Head.astro";
import { SITE_TITLE } from "../consts.ts";
---

<html lang="en">
    <Head title={SITE_TITLE} />

    <body>
        <header role="banner">
            <div>
                <a href="/" class="hero">Shreyas Minocha</a>
            </div>

            <figure class="pfp">
                <img
                    src="/img/cmc.jpeg"
                    alt="A selfie of me in front of a neon 'Crypto means Cryptography' sign"
                    width="200"
                    height="150"
                />
                <figcaption>DEF CON 30, Las Vegas, US</figcaption>
            </figure>

            <nav>
                <ul>
                    <li><a href="/blog">blog</a></li>
                    <li><a href="/contact">contact</a></li>
                    <!-- <li><a href="#">projects</a></li> -->
                    <li><a href="/cv/cv.pdf">cv</a></li>
                    <li><a href="/miscellaneous">misc</a></li>
                    <li><a href="/uses">setup</a></li>
                    <li><a href="/friends">friends</a></li>
                </ul>
            </nav>
        </header>

        <main>
            <slot />
        </main>
    </body>
</html>

<style>
    /* precedence issue with style.css. todo: why isn't this scoped? */
    html body {
        display: grid;
        grid-template-columns: max-content auto;
        max-width: 90%;
        margin: 1rem auto;
    }

    header[role="banner"],
    main {
        padding: 1rem;
    }

    header[role="banner"] {
        text-align: left;
        margin: 0 auto;
        max-width: 450px;
    }

    header[role="banner"] .hero {
        font-size: unset;
        display: inline-block;
    }

    figcaption {
        font-size: smaller;
        font-style: italic;
    }

    header[role="banner"] .hero,
    .pfp {
        width: 200px;
    }

    nav {
        margin-top: 1em;
        font-family: var(--heading-font);
        font-weight: lighter;
    }

    nav ul li {
        display: block;
    }

    nav.related {
        font-size: 85%;
    }

    main {
        max-width: 70ch;
    }

    p {
        text-align: left;
    }

    @media print, screen and (max-width: 760px) {
        html body {
            grid-template-columns: auto;
        }

        header[role="banner"] .hero {
            width: unset;
        }

        .pfp {
            display: none;
        }

        header[role="banner"] {
            text-align: center;
        }

        main {
            max-width: unset;
        }

        nav ul li {
            margin-right: 0;
        }
    }
</style>
